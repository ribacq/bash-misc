#!/bin/bash
dims="$(xrandr -q | grep -oe 'current [[:digit:]]\+ x [[:digit:]]\+' | sed 's/current //;s/ x /x/')"
w="$(cut -d'x' -f1 <<< "$dims")"
h="$(cut -d'x' -f2 <<< "$dims")"
iw="$((w/150))"
ih="$((h/150))"

head -c "$((3*iw*ih))" /dev/urandom | display -backdrop -window root -sample "${w}x${h}" -depth 8 -size "${iw}x${ih}" RGB:-
